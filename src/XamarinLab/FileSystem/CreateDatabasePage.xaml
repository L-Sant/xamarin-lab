<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinLab.FileSystem.CreateDatabasePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="CreateDatabaseButton"
                Margin="20,20"
                Padding="7"
                BackgroundColor="LightBlue"
                Clicked="CreateDatabaseButtonClickedAsync"
                CornerRadius="7"
                HorizontalOptions="CenterAndExpand"
                Text="Try Create Database!"
                TextColor="Black"
                VerticalOptions="Start" />
            <ScrollView>
                <StackLayout
                    x:Name="ResultsStack"
                    Margin="50,20"
                    Padding="0,0,0,20"
                    Spacing="10" />
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>